{% extends 'base.html.twig' %}

{% block body %}
	<div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
		{% include "/layouts/nav.html.twig" %}
		<main class="px-3">

			{{ form_start(form) }}
			{{ form_errors(form) }}
			{{ form_row(form.titre) }}
			{{ form_row(form.resume) }}
			{{ form_row(form.premiereDiffusion) }}
			{{ form_row(form.nbEpisodes) }}
			{{ form_row(form.image) }}
			{{ form_row(form.chaineDiffusion) }}
			{{ form_row(form.pays) }}
			{{ form_row(form.lesGenres) }}
			<button type="submit" class="btn btn-success">
				{% if app.request.attributes.get('_route') == "app_admin_update_serietv" %}
					Modifier
				{% else %}
					Ajouter
				{% endif %}
			</button>
			{{ form_end(form) }}

		</main>
	</div>
{% endblock %}
