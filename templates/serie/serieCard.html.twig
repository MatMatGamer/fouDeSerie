<div class="col">
	<div class="card mb-2">
		{% if LastIds is defined%}
			{% if item.getId() in LastIds %}
				<span class="position-absolute top-0 start-100 translate-custom-70 badge rounded-pill bg-danger">
					Nouveau
				</span>
			{% endif %}
		{% endif %}
		{% if app.request.attributes.get('_route') == "app_admin_listeseries" %}
			<a class="overlay" href="{{path("app_admin_updateserie", {id: item.getId()})}}"></a>
		{% else %}
			<a class="overlay" href="{{path("app_serie_details", {id: item.getId()})}}"></a>
		{% endif %}
		<div class="row g-0">
			<img src="{{item.getImage()}}" class="img-fluid rounded-start img-card" alt="{{item.getTitre()}}">

			<div class="card-body">
				<h5 class="card-title">
					<img src="{{item.getPays().getDrapeau()}}" height="20">
					{{ item.getTitre() }}
				</h5>
				<p class="card-text">
					<small class="text-body-secondary">Premi√®re Diffusion :
						{{ item.getPremiereDiffusion()|date("d/m/Y") }}</small>
				</p>

			</div>
		</div>
	</div>
</div>
