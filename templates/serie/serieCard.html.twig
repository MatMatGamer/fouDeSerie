<div class="col">
	<div class="card mb-2">
		{% if LastIds is defined%}
			{% if item.getId() in LastIds %}
				<span class="position-absolute top-0 start-100 translate-custom-70 badge rounded-pill bg-danger">
					Nouveau
				</span>
			{% endif %}
		{% endif %}
		{% if app.request.attributes.get('_route') == "app_admin_listeseries" %}
			{% if action == "delete" %}
				<form action="{{ path("app_admin_deleteserie", {id:item.getId()})}}" method="post" onsubmit="return confirm('Êtes vous sûr de vouloir supprimer la série {{item.getTitre()}} ?')">

					<input type="hidden" name="_method" value="delete">
					<input type="hidden" name="token" value="{{csrf_token("DeLeteCSRFtokenSerie" ~ item.getId() ~ "MonReufré")}}">
					<button type="submit" class="hiddenbtn">
					{% else %}
						<a class="overlay" href="{{path("app_admin_updateserie", {id: item.getId()})}}"></a>
					{% endif %}
				{% else %}
					<a class="overlay" href="{{path("app_serie_details", {id: item.getId()})}}"></a>
				{% endif %}
				<div class="row g-0">
					<img src="{{item.getImage()}}" class="img-fluid rounded-start img-card" alt="{{item.getTitre()}}">

					<div class="card-body">
						<h5 class="card-title">
							<img src="{{item.getPays().getDrapeau()}}" height="20">
							{{ item.getTitre() }}
						</h5>
						<p class="card-text">
							<small class="text-body-secondary">Première Diffusion :
								{{ item.getPremiereDiffusion()|date("d/m/Y") }}</small>
						</p>

					</div>
				</div>
				{% if app.request.attributes.get('_route') == "app_admin_listeseries" %}
					{% if action == "delete" %}
					</button>
				</form>
			{% endif %}
		{% endif %}

	</div>
</div>
